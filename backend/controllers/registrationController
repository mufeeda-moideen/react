// backend/controllers/registrationController.js
const Registration = require("../models/Registration");

const register = async (req, res) => {
  try {
    console.log("ğŸ“¥ Received Registration Data:", req.body);
    const saved = await Registration.create(req.body);
    res.status(200).json({
       message: "âœ… Data submitted successfully!",
       data: saved
    })
  } catch (err) {
    console.error("âŒ Failed to save registration:", err);
    res.status(500).json({ message: "Failed to save registration", error: err });
  }
};

module.exports = {
  register, 
};
